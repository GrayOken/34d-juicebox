generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model purchases {
  id          Int      @id @default(autoincrement())
  date        DateTime @db.Date
  amount      Decimal  @db.Decimal
  description String   @db.VarChar(255)
}

model sales {
  id          Int      @id @default(autoincrement())
  date        DateTime @db.Date
  amount      Decimal  @db.Decimal
  description String   @db.VarChar(255)
}
